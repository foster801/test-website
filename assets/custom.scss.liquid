/*============================================================================
  Global
============================================================================*/
{% assign base_font = settings.type_base_font %}

{{ base_font | font_face }}

{%- assign base_font_bolder = base_font | font_modify: 'weight', 'bolder' -%}
{%- assign base_font_bold = base_font | font_modify: 'weight', 'bold' -%}
{%- assign base_font_italic = base_font | font_modify: 'style', 'italic' -%}
{%- assign base_font_bold_italic = base_font_bold | font_modify: 'style', 'italic' -%}

{{ base_font_bold | font_face }}
{{ base_font_bolder | font_face }}
{{ base_font_italic | font_face }}
{{ base_font_bold_italic | font_face }}

$font-stack-body: {{ base_font.family }}, {{ base_font.fallback_families }};

h2,
.h2 {
    text-transform: none;
}
h2,
.h2,
h3,
.h3,
h4,
.h4 {
    font-weight: 700;
}
.slideshow__subtitle {
    font-size: 2em;
}
.btn.slideshow__btn {
    font-family: inherit;
    min-height: inherit;
    padding: 5px 28px;
}
.shopify-section {
    padding-top: 27.5px;
    padding-bottom: 27.5px;
}
.section-header {
    margin-bottom: 27.5px;
}
@media only screen and (max-width: 749px) {
    .slideshow__title,
    .slideshow__subtitle {
        display: block;
    }
    .slideshow__btn {
        display: inline-block;
    }
    .slideshow__controls {
        top: auto;
        bottom: 0;
        left: 0;
    }
    .slideshow__arrows {
        display: flex;
        }
    .slideshow__subtitle--mobile,
    .slideshow__title--mobile,
    .slideshow__arrows--mobile,
    .slideshow__btn--mobile,
    .slideshow__text-content--mobile {
        display: none !important;
    }

    .featured-image {
        padding-top: 27.5px;
    }

    #shopify-section-collection {
        .grid {
            li:last-child,
            li:nth-child(3) {
                display: none;
            }
        }
    }

    #shopify-section-1596572274120 {
        .logo-bar {
            li:last-child,
            li:nth-child(4) {
                display: none;
            }
        }
    }
}


/*============================================================================
  Header
============================================================================*/
#shopify-section-header {
    padding-top: inherit;
    padding-bottom: inherit;
}
.site-header {
    background-color: #245649;
    .site-header__mobile-nav {
        display: flex;
        justify-content: center;
        background-color: #245649;
        .site-header__logo {
            margin: 2px 0 15px 27px;
        }
        .site-nav {
            margin: 25px 54px 25px 0;
        }
    }
    a {
        color: #fff;
    }
    .site-nav__label {
        border-bottom: none;
    }
    .btn--link,
    .icon-login,
    .site-header__icons--plus {
        display: none;
    }
}

/*============================================================================
  Main Slideshow
============================================================================*/
.slideshow__controls {
    .slideshow__arrows {
        background-color: transparent;
        .slideshow__arrow {
            display: none;
        }
        .slick-dots li {
            margin: 0 10px;
            a::before {
                width: 16px;
                height: 16px;
                border-radius: 0;
            }
        }
        &:hover {
            background-color: transparent;
        }
    }
}

/*============================================================================
  Featured Collections
 ============================================================================*/
#shopify-section-1596570200288 {
    padding-top: 0;
    .collection-grid-item__button {
        top: 100%;
        padding: 15px 0;
        background-color: #245649;
    }
}

/*============================================================================
  Featured Products
============================================================================*/
.product-card {
    .product-card__title {
        font-family: $font-stack-body;
    }
    position: relative;
    text-align: center;
    .price {
        align-items: inherit;
        .price-item {
            color: #245649;
        }
    }
}

/*============================================================================
  Secondary Slideshow
============================================================================*/
#shopify-section-1596571765697 .slideshow__btn {
    background-color: #245649;
}
.index-section--newsletter-background {
    background-color: #245649;
    color: #fff;
    .rte p {
        color: #fff;
    }
    .btn {
        background-color: #245649;
        border: 2px solid #fff;
    }
}

.logo-bar__item {
    margin: 0 5.525px 35px;
}

/*============================================================================
  Newslettter
============================================================================*/
.newsletter-section {
    .input-group__btn {
        margin-left: .5em;
    }
    h2 {
        display: flex;
        justify-content: center;
        img.email-icon {
            margin-right: 1em;
        }
    }
}

/*============================================================================
  Footer
============================================================================*/
#shopify-section-footer {
    padding: 0;
    .site-footer__item-inner--newsletter .h4 {
        text-align: right;
        margin-right: 4em;
    }
    .h4 {
        margin-bottom: 7px;
        font-size: 1em;
    }
}