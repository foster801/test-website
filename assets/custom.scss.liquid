{{ base_font_italic | font_face }}
{{ base_font_bold_italic | font_face }}

$font-stack-body: {{ base_font.family }}, {{ base_font.fallback_families }};

h2, .h2 {
    text-transform: none;
}
.btn.slideshow__btn {
    font-family: inherit;
    min-height: inherit;
    padding: 5px 28px;
}
.shopify-section {
    padding-top: 27.5px;
    padding-bottom: 27.5px;
}


#shopify-section-header {
    padding-top: inherit;
    padding-bottom: inherit;
}
.site-header {
    background-color: #245649;
    .site-header__mobile-nav {
        display: flex;
        justify-content: center;
        background-color: #245649;
        .site-header__logo {
            margin: 2px 0 15px 27px;
        }
        .site-nav {
            margin: 25px 54px 25px 0;
        }
    }
    a {
        color: #fff;
    }
    .site-nav__label {
        border-bottom: none;
    }
    .btn--link,
    .icon-login,
    .site-header__icons--plus {
        display: none;
    }
}

// Main Slideshow
.slideshow__controls {
    .slideshow__arrows {
        background-color: transparent;
        .slideshow__arrow {
            display: none;
        }
        .slick-dots li {
            margin: 0 10px;
            a::before {
                width: 14px;
                height: 14px;
                border-radius: 0;
            }
        }
        &:hover {
            background-color: transparent;
        }
    }
}

// Featured Collections
#shopify-section-1596570200288 {
    padding-top: 0;
    .collection-grid-item__button {
        top: 100%;
        padding: 15px 0;
        background-color: #245649;
    }
}

// Featured Products
.product-card {
    .product-card__title {
        font-family: $font-stack-body;
    }
    position: relative;
    text-align: center;
    .price {
        align-items: inherit;
        .price-item {
            color: #245649;
        }
    }
}

// Secondary Slideshow
#shopify-section-1596571765697 .slideshow__btn {
    background-color: #245649;
}
.index-section--newsletter-background {
    background-color: #245649;
    color: #fff;
    .rte p {
        color: #fff;
    }
    .btn {
        background-color: #245649;
        border: 2px solid #fff;
    }
}

.logo-bar__item {
    margin: 0 5.525px 35px;
}

// Footer
#shopify-section-footer {
    padding: 0;
    .site-footer__item-inner--newsletter .h4 {
        text-align: right;
        margin-right: 4em;
    }
    .h4 {
        margin-bottom: 7px;
    }
}