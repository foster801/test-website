.site-header {
    background-color: #245649;
    .site-header__mobile-nav {
        display: flex;
        justify-content: center;
        background-color: #245649;
        .site-header__logo {
            margin: 15px 16px 15px 0;
        }
    }
    a {
        color: #fff;
    }
    .btn--link,
    .icon-login,
    .site-header__icons--plus {
        display: none;
    }
}
.slideshow__controls {
    .slideshow__arrows {
        background-color: transparent;
        .slideshow__arrow {
            display: none;
        }
        .slick-dots li {
            margin: 0 10px;
            a::before {
                width: 14px;
                height: 14px;
                border-radius: 0;
            }
        }
        &:hover {
            background-color: transparent;
        }
    }
}
#shopify-section-1596571765697 .slideshow__btn {
    background-color: #245649;
}
.index-section--newsletter-background {
    background-color: #245649;
    color: #fff;
    .rte p {
        color: #fff;
    }
    .btn {
        background-color: #245649;
        border: 2px solid #fff;
    }
}
